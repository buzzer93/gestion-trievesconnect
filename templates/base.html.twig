<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Trieves Connect Manager
			{% endblock %}
		</title>
		<link rel="icon" href="https://gestion.trievesconnect.fr/image/favicon.ico">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
		<!--=============== Icon ===============-->
        <script src="https://kit.fontawesome.com/9075c6e930.js" crossorigin="anonymous"></script>
        {% block stylesheets %}{% endblock %}
		<!--=============== CSS ===============-->
		<link rel="stylesheet" href="{{asset('css/styles.css')}}"/>

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
    </head>
    <body class="bg-dark text-light">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm rounded">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('home.index') }}">
                    <img src="https://gestion.trievesconnect.fr/image/favicon.ico" alt="Logo" style="height: 100%; margin-right: 10px;">
                    Trieves Connect Manager
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
							<a class="nav-link {{ app.current_route == 'admin.product.' ? 'active' : '' }}" href="{{ path('admin.product.index') }}">Produits</a>
						</li>
                        <li class="nav-item">
							<a class="nav-link {{ app.current_route == 'admin.service.' ? 'active' : '' }}" href="{{ path('admin.service.index') }}">Services</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {{ app.current_route == 'admin.category.' ? 'active' : '' }}" href="{{ path('admin.category.index') }}">Catégories</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {{ app.current_route == 'admin.labeling.' ? 'active' : '' }}" href="{{ path('admin.labeling.index') }}">Étiquetage</a>
						</li>
                        <li class="nav-item">
							<a class="nav-link {{ app.current_route == 'admin.inventory.' ? 'active' : '' }}" href="{{ path('admin.inventory.index') }}">Inventaire</a>
						</li>
						{% if is_granted('ROLE_USER') %}
							<li class="nav-item">
								<a class="nav-link {{ app.current_route == 'logout' ? 'active' : '' }}" href="{{ path('logout') }}">Se déconnecter</a>
							</li>
						{% else %}
							<li class="nav-item">
								<a class="nav-link {{ app.current_route == 'login' ? 'active' : '' }}" href="{{ path('login') }}">Se connecter</a>
							</li>
						{% endif %}
					</ul>
				</div>
			</div>
		</nav>
		<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
			{% include "partials/flash.html.twig" %}
			{% block body %}{% endblock %}
		</div>

		<!-- Scripts Bootstrap -->
		<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz4fnFO9gybB7tD/ZFx9zFhkfnWz6ou4y/8ymIo6h3s2/+NQnTyoDpWcO4" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>
	</body>
</html>
