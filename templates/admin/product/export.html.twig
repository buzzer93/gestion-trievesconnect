{% extends './base.html.twig' %}

{% block body %}
	<div class="d-flex justify-content-center">
		<div class="spinner-border" role="status">
			<span class="visually-hidden">Loading...</span>
		</div>
	</div>

	<script>
		// 2. Créer un lien de téléchargement pour le fichier généré
const filePath = 'public/export/ProductsDatas.xlsx';
const link = document.createElement('a');
link.href = filePath;
link.download = 'ProductsDatas.xlsx'; // Nom du fichier
document.body.appendChild(link);
link.click();
document.body.removeChild(link);

// 3. Rediriger après un court délai
setTimeout(() => {
window.location.href = '{{ path('admin.product.index') }}';
}, 2000);
	</script>
{% endblock %}
