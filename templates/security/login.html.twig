{% extends './base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	
		<form method="post">
			<h1 class="h3 font-weight-normal text-center">Connexion</h1>
			<div class="mb-3">
				<label for="inputUsername">Nom d'utilisateur</label>
				<input type="text" placeholder="demo" name="username" id="inputUsername" class="form-control bg-dark text-light border-light" required autofocus>
			</div>
			<div class="mb-4">
				<label for="inputPassword">Mot de passe</label>
				<input type="password" name="password" id="inputPassword" placeholder="demo" class="form-control bg-dark text-light border-light" required>
			</div>
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<div class="d-flex justify-content-center">
				<button class="btn btn-lg btn-primary" type="submit">
					Se connecter
				</button>
			</div>
		</form>
	</div>
{% endblock %}
